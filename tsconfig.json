{
  "compilerOptions": {
    "baseUrl": "./package",
    "strict": true,
    "target": "ESNext",
    "lib": ["ESNext"],
    "outDir": "./dist",
    "moduleResolution": "NodeNext",
    "module": "NodeNext",
    "paths": {
      "@/*": ["./package/*"]
    }
  },
  "include": ["package/index.ts"],
  "exclude": ["node_modules", "dist"]
}
