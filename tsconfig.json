{
  "compilerOptions": {
    "baseUrl": "./package",
    "strict": true,
    "target": "ES2015",
    "lib": ["ESNext"],
    "outDir": "./dist",
    "declaration": true,
    "declarationDir": "./types",
    "esModuleInterop": true,
    "module": "ESNext",
    "isolatedModules": true,
    "paths": {
      "@/*": ["./package/*"]
    }
  },
  "include": ["package/index.ts"],
  "exclude": ["node_modules", "dist"]
}
